<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <include
        android:id="@+id/titleIndicatorLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/title_bar"
        />


    <View
        android:id="@+id/center_line"
        android:layout_height="0dip"
        android:layout_width="fill_parent"
        android:layout_centerVertical="true"
        ></View>

    <TextView
        android:id="@+id/count_textview"
        android:layout_height="180dip"
        android:layout_width="180dip"
        android:layout_above="@id/center_line"
        android:layout_marginBottom="0dip"
        android:layout_centerHorizontal="true"
        style="@style/CountTextStyle"
        android:background="@drawable/green_circle"
        android:gravity="center"
        ></TextView>

    <TextView
        android:id="@+id/tips_textview"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleIndicatorLayout"
        style="@style/CountTextStyle"
        android:visibility="gone"
        ></TextView>

    <ImageView
        android:id="@+id/refresh_button"
        android:layout_below="@id/center_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/refresh_red"
        android:layout_marginTop="50dip"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/info_textview"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dip"
        style="@style/InfoTextStyle"
        ></TextView>


    <TextView
        android:id="@+id/share_textview"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dip"
        android:text="@string/share_text"
        style="@style/ShareTextStyle"
        ></TextView>

</RelativeLayout>
