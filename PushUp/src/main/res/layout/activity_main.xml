<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <include
        android:id="@+id/titleIndicatorLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/title_bar"
        />


    <View
        android:id="@+id/center_line"
        android:layout_height="0dip"
        android:layout_width="fill_parent"
        android:layout_centerVertical="true"
        ></View>

    <ImageView
        android:id="@+id/start_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_launcher_hd"
        android:layout_above="@id/center_line"
        android:layout_marginBottom="20dip"
        android:layout_centerHorizontal="true"
        ></ImageView>

    <TextView
        android:id="@+id/pushup_text"
        android:layout_below="@id/center_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip"
        android:layout_centerHorizontal="true"
        style="@style/JustPushUpTextStyle"
        android:text="@string/just_push_up"/>

    <TextView
        android:id="@+id/result_text"
        android:layout_below="@id/pushup_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip"
        android:layout_centerHorizontal="true"
        style="@style/InfoTextStyle"
        />

</RelativeLayout>
