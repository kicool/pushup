<resources>

    <!--
    Base application theme, dependent on API level. This theme is replaced
    by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
-->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        <item name="android:windowBackground">@drawable/app_bg_repeat</item>
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleSize">0.0dip</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/bg_color_light_grey</item>
    </style>

    <style name="JustPushUpTextStyle">
        <item name="android:textColor">#ff6600</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-3</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">@color/blackColor</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="CountTextStyle">
        <item name="android:textColor">#ff6600</item>
        <item name="android:textSize">84sp</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-3</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">@color/blackColor</item>
    </style>

    <style name="InfoTextStyle">
        <item name="android:textColor">#ff6600</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">@color/blackColor</item>
    </style>

</resources>
